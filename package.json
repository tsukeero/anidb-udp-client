{
  "name": "anidb-udp-client",
  "version": "2.0.0",
  "description": "anidb-udp-client is a library for Node.js that facilitates the use of Anidb's UDP API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/tsukeero/anidb-udp-client",
  "homepage": "https://tsukeero.github.io/anidb-udp-client/",
  "keywords": [
    "anime",
    "anidb"
  ],
  "scripts": {
    "ci_install": "yarn install --immutable --immutable-cache --check-cache",
    "test": "jest --coverage",
    "verify": "yarn eslint . && yarn tsc && yarn test",
    "depcheck": "depcheck .",
    "build": "tsc --outDir ./dist",
    "docs": "typedoc src/index.ts --excludeExternals --out ./docs",
    "postinstall": "is-ci || husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "engines": {
    "node": ">=18 < 21"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "watchman": false,
    "modulePaths": [
      "src"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "transform": {
      "\\.[jt]sx?$": "babel-jest"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  },
  "author": "Tsukee Kage <tsukee.kage@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bottleneck": "^2.19.5",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@tsconfig/node16": "^16.1.1",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "depcheck": "^1.4.7",
    "eslint": "^8.52.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "pino": "^8.16.1",
    "pinst": "^3.0.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.3",
    "typescript": "^5.2.2"
  },
  "packageManager": "yarn@4.0.1"
}
